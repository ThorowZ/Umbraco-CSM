@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoCard)Model.Content;
    var settings = Model.Settings as ContentModels.HeroSettings;
}

<div class="flex flex-col gap-4">
    <h2 class="text-[#4F5955] text-[1.375rem] font-semibold">@content.InfoTitle</h2>
    <img src="@(content.InfoImage?.Url() ?? "~/Images/Risk-Management.svg")" />
    <p class="text-body-text text-[0.875rem] font-normal">@content.InfoText</p>
</div>