@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;


@{
	var content = (ContentModels.SuccessSection)Model.Content;

}

<section class="bg-[#4F5955] pt-16">
    <div class="max-w-5xl mx-auto px-4 flex flex-col items-center text-center gap-10 relative">

        <div class="space-y-3">
            @if (!string.IsNullOrWhiteSpace(content.SuccessLabel))
            {
                <span class="inline-block px-4 py-1 text-[0.75rem] font-semibold uppercase text-[#D9C3A9]">
                    @content.SuccessLabel
                </span>
            }

            <h2 class="text-3xl md:text-4xl font-bold text-white">
                @content.SuccessTitle
            </h2>
        </div>


        <div class="w-full pt-8 pb-10">
            <div class="relative grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-16">
                <div class="space-y-2">
                    <p class="text-4xl md:text-5xl font-bold text-[#D9C3A9]">
                        @content.SuccessCustomers
                    </p>
                    <p class="text-xs md:text-sm text-white max-w-xs mx-auto">
                        @content.SuccessCustomersText
                    </p>
                </div>

                <div class="space-y-2">
                    <p class="text-5xl md:text-5xl font-bold text-[#D9C3A9]">
                        @content.SuccessProjects
                    </p>
                    <p class="text-xs md:text-sm text-white max-w-xs mx-auto">
                        @content.SuccessProjectsText
                    </p>
                </div>

                <div class="space-y-2">
                    <p class="text-4xl md:text-5xl font-bold text-[#D9C3A9]">
                        @content.SuccessBranches
                    </p>
                    <p class="text-xs md:text-sm text-white max-w-xs mx-auto">
                        @content.SuccessBranchesText
                    </p>
                </div>
            </div>
        </div>


        @if (content.SuccessImage != null)
        {
            <div class="relative w-full max-w-4xl mx-auto overflow-hidden mt-2 top-20">
                <img src="@content.SuccessImage.Url()" alt="" class="w-full h-auto object-cover" />
            </div>
        }
            @if (content.SuccessImageWorld != null)
            {
            <img src="@content.SuccessImageWorld.Url()" class="absolute"/>
            }

    </div>
</section>

