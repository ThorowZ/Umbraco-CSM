@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPageBanner>

@using Umbraco.Cms.Core.PublishedCache
@using Umbraco.Cms.Core.Routing
@using Umbraco.Cms.Core.Services.Navigation

@inject IPublishedContentCache PublishedContentCache
@inject IDocumentNavigationQueryService DocumentNavigationQueryService
@inject IPublishedUrlProvider PublishedUrlProvider



	<section class="bg-white-100 bg-no-repeat py-16
	[background-image:url('/Images/Rectangle-left.svg'),url('/Images/Rectangle-right.svg')]
	[background-position:left_bottom,top_right]">

		<div class="container mx-auto px-4">
			<h1 class="text-center text-[2.5rem] text-[#4F5955] font-bold">@Model.PageTitle</h1>

			<div class="flex justify-center gap-3 pt-3">
			@{
				var selection = Model.Ancestors().ToArray();
			}

			@if (selection?.Length > 0)
			{
				<ul class="flex items-center justify-center gap-2">

					@foreach (var item in selection.OrderBy(x => x.Level))
					{
						<li class="flex items-center">
							<a class="text-sm no-underline text-[#4F5955] hover:text-[#F2EDDC]" href="@item.Url(PublishedUrlProvider)">@item.Name</a>
							<i class="fa-solid fa-angle-right ml-1 flex items-center justify-center text-[10px] leading-none text-[#4F5955]"></i>
						</li>
					}

					<li class="flex items-center">
						<p class="text-sm text-[#D9C3A9]">@Model.Name</p>
					</li>
				</ul>
			}
			</div>

		</div>

	</section>